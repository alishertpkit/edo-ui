<!doctype html><html lang="ru"><head><meta charset="utf-8"><title>Incoming</title></head>
<body>
<h3>Входящие</h3>
<button onclick="list()">Обновить</button>
<button onclick="create()">Создать</button>
<pre id="out"></pre>
<script>
async function list(){
  out.textContent = JSON.stringify(await (await fetch('/api/incoming')).json(), null, 2);
}
async function create(){
  const r = await fetch('/api/incoming', {method:'POST', headers:{'Content-Type':'application/json'},
    body: JSON.stringify({number:'ВХ-'+Date.now(), subject:'Тест'})});
  out.textContent = JSON.stringify(await r.json(), null, 2);
}
</script>
</body></html>
